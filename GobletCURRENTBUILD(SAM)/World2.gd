func _ready():
	# Called every time the node is added to the scene.
	# Initialization here
	var t = Timer.new()
	t.set_wait_time(1)
	t.set_one_shot(true)
	self.add_child(t)
	t.start()
	yield(t, "timeout")
	t.queue_free()
	self.get_node("Music").allow_play()

